<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.0-preview.8</Version>
    <Authors>stef-k</Authors>
    <Description>Node-free frontend bundling toolkit for ASP.NET Core MVC / Razor applications using esbuild</Description>
    <PackageTags>aspnetcore;mvc;razor;bundling;esbuild;frontend</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/stef-k/MvcFrontendKit</RepositoryUrl>
    <PackageProjectUrl>https://github.com/stef-k/MvcFrontendKit</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <!-- Build task dependencies -->
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.11.48" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="YamlDotNet" Version="16.2.1" />

    <!-- ASP.NET assemblies needed by MSBuild task - get path for copying -->
    <PackageReference Include="Microsoft.AspNetCore.Razor" Version="2.2.0" GeneratePathProperty="true" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" GeneratePathProperty="true" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Framework reference for runtime -->
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <!-- Copy ASP.NET assemblies to package lib folder for MSBuild task -->
  <ItemGroup>
    <None Include="$(PkgMicrosoft_AspNetCore_Razor)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="lib\$(TargetFramework)\" Visible="false" />
    <None Include="$(PkgMicrosoft_AspNetCore_Mvc_ViewFeatures)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="lib\$(TargetFramework)\" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="build\**\*" Pack="true" PackagePath="build\" />
    <None Include="runtimes\**\*" Pack="true" PackagePath="runtimes\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Templates\frontend.config.template.yaml" />
  </ItemGroup>

</Project>
